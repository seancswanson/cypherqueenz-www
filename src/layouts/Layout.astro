---
import { ViewTransitions } from "astro:transitions";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO } from "astro-seo";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title ? title : "Cypher Queenz | Bgirl Organization"}
      description="Cypher Queenz is a Bgirl collective coming together to grow and leveling up the scene by highlighting the female voice in Hip Hop"
      charset="UTF-8"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;600;800" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : "Cypher Queenz | Bgirl Organization"}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />
  </head>
  <body class="flex flex-col min-h-screen  text-black">
    <NavBar />
    <div class="flex-grow max-w-[1440px] w-full mx-auto border-l-2 border-r-2 border-black">
      <slot />
    </div>
    <Footer />
    <style is:global>
      :root {
        --font-family-skin-display: "SlowScript";
        --color-bg-base: #ffffff;
        --color-bg-accent: #f4f0e6;
        --color-shadow: 135 103 123;
      }

      @font-face {
        font-family: "Combine";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/Combine.otf") format("opentype");
      }
      @font-face {
        font-family: "SlowScript";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/SlowScript-One.otf") format("opentype");
      }
      @font-face {
        font-family: "Squarevetica";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/Squarevetica-Regular.otf") format("opentype");
      }

      html {
        font-family: 'Noto Sans', sans-serif;
        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;
      }
    </style>
    <script async src="//www.instagram.com/embed.js"></script>
  </body>
</html>