---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title="Cypher Queenz | Bgirl Organization"
      description="Welcome to Naka Studio! Alisha Nakamura's full-service hair salon is located in Seattle and offers a range of services including haircuts, coloring, styling, and more. Alisha Nakamura is dedicated to providing you with the best possible service and helping you achieve the look you desire. Visit us today and let us help you feel and look your best!"
      charset="UTF-8"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Anybody:wght@400;600;800&family=Space+Mono:ital@1&display=swap" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex h-screen flex-col bg-skinPattern font-skinDisplay">
    <slot />
    <style is:global>
      :root {
        --font-family-skin-display: "Anybody";
        --color-bg-base: #f7fafc;
        --color-bg-accent: #f4f0e6;
        --color-shadow: 135 103 123;
        --bg-image-skin-pattern: url("https://www.transparenttextures.com/patterns/brilliant.png");
        --bg-image-skin-pattern-size: 3px;
      }
    </style>
  </body>
</html>
