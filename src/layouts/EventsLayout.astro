---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO title="Cypher Queenz | Events" description="Cypher Queenz is a Bgirl collective coming together to grow and leveling up the scene by highlighting the female voice in Hip Hop" charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Anybody:wght@400;600;800&family=Space+Mono:ital@1&display=swap" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex h-screen flex-col bg-skinPattern font-skinDisplay">
    <div id="fb-root"></div>
    <script>
      declare const window: any;
      window.fbAsyncInit = function () {
        FB.init({
          appId: "549851657070188",
          autoLogAppEvents: true,
          xfbml: true,
          version: "v15.0",
        });
      };
    </script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js"></script>

    <slot />
    <style is:global>
      :root {
        --font-family-skin-display: "Anybody";
        --color-bg-base: #f7fafc;
        --color-bg-accent: #f4f0e6;
        --color-shadow: 135 103 123;
        --bg-image-skin-pattern: url("https://www.transparenttextures.com/patterns/brilliant.png");
        --bg-image-skin-pattern-size: 3px;
      }
    </style>
  </body>
</html>
