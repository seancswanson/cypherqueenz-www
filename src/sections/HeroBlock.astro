---
import { Image } from "astro:assets";
import Emoji from "astro-emoji";
import heroPoster from "../images/home/hero-poster.png";
import heroVideo from "../video/cypher-queenz-video-compressed.mp4";
---

<div class="bg-cover bg-center">
  <div class="pb-2">
    <section
      class="m-auto flex flex-col-reverse p-2 sm:p-0 md:flex-row-reverse border-b-2 border-black"
    >
      <div class="flex flex-1 flex-col rounded-lg p-1">
        <h1
          class="bottom bg-skin-base p-2 text-2xl font-extrabold underline sm:text-6xl"
        >
          @CypherQueenz
        </h1>
        <h2 class="h-full bg-skin-base p-2 text-xl sm:text-6xl">
          A Bgirl collective coming together to grow and leveling up the scene
          by highlighting the female voice in Hip Hop
        </h2>
      </div>
      <div class="basis-1/2">
        <video
          autoplay
          playsinline
          muted
          loop
          poster={heroPoster.src}
          id="myVideo"
          class="h-full w-full object-cover object-center"
        >
          <source src={heroVideo} type="video/mp4" />
        </video>
      </div>
    </section>

    <section
      class="m-auto flex flex-col bg-skin-base p-4 text-center"
    >
      <p class="mb-4 text-5xl">
        We offer <b>free monthly workshops/cypher sessions</b> and <b
          >supportive community</b
        > for experience dancers and those just getting started <b
          >from day one.</b
        >
      </p>
      <p class="m-auto mb-4 text-3xl underline">
        Find us online <Emoji symbol="ðŸ‘‡" />
      </p>
      <div class="flex justify-center gap-8 text-2xl font-extrabold">
        <a
          href="https://www.instagram.com/cypherqueenz/?hl=en"
          class="flex h-24 w-24 items-center justify-center rounded-full border-2 border-black"
          >IG</a
        >
        <a
          href="https://m.facebook.com/Cypher-Queenz-111665977110803/"
          class="flex h-24 w-24 items-center justify-center rounded-full border-2 border-black"
          >FB</a
        >
      </div>
    </section>
  </div>
</div>

